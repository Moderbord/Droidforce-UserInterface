<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Not"
        android:id="@+id/notTV"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:id="@+id/notCheckbox"
        android:layout_toRightOf="@+id/notTV"
        android:layout_alignBaseline="@+id/notTV"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notCheckbox"
        android:text="Which kind of condition?"
        android:padding="12dp"
        android:id="@+id/kindOfCTV"/>

    <de.tum.in.i22.sentinel.android.app.fragment.policy_editor.customViews.TypeConditionChooser
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_type_action"
        android:layout_below="@id/notCheckbox"
        android:layout_toRightOf="@id/kindOfCTV"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/spinner_type_action"
        android:id="@+id/subConditionAttrs">
    </LinearLayout>


